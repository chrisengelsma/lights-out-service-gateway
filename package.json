{
  "name": "lights-out-server",
  "description": "Node server for Lights Out",
  "version": "0.0.1",
  "private": true,
  "author": "Chris Engelsma <chris.engelsma@ogd.com>",
  "main": "src/app.ts",
  "scripts": {
    "build": "tsc",
    "start:prod": "export NODE_ENV=production && node build/app.js --max-old-heap-size=2048",
    "start": "nodemon --max-old-heap-size=2048",
    "inspect": "nodemon --inspect src/app.ts",
    "coverage": "nyc -r lcov -e .ts -x \"*.spec.ts\" npm run test",
    "test": "mocha -r ts-node/register \"tests/**/*.spec.ts\" --recursive || exit 0",
    "lint": "npm run lint:js ",
    "docs": "typedoc --out docs src",
    "lint:eslint": "eslint --ignore-path .gitignore --ext .ts",
    "lint:js": "npm run lint:eslint src/",
    "lint:fix": "npm run lint:js -- --fix"
  },
  "dependencies": {
    "async": "^3.1.0",
    "axios": "^0.19.1",
    "bcrypt": "^5.1.0",
    "body-parser": "^1.19.0",
    "celebrate": "^11.0.1",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "jsonwebtoken": "^9.0.0",
    "errorhandler": "^1.5.1",
    "event-dispatch": "^0.4.1",
    "express": "^4.17.1",
    "method-override": "^3.0.0",
    "mongoose": "^6.4.7",
    "morgan": "^1.9.1",
    "nodemon": "^2.0.2",
    "reflect-metadata": "^0.1.13",
    "typedi": "^0.8.0",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.2",
    "@types/mocha": "^5.2.7",
    "@types/chai": "^4.2.7",
    "@types/lodash": "^4.14.149",
    "@types/node": "^13.1.8",
    "@types/request": "^2.48.4",
    "@types/sinon": "^7.5.1",
    "@types/multer": "^1.3.10",
    "@types/mongodb": "^4.0.7",
    "@typescript-eslint/eslint-plugin": "^2.17.0",
    "@typescript-eslint/parser": "^2.17.0",
    "typedoc": "^0.17.7",
    "assert": "^2.0.0",
    "eslint": "^6.8.0",
    "copyfiles": "^2.2.0",
    "chai": "^4.2.0",
    "nyc": "^15.0.0",
    "rewire": "^4.0.1",
    "sinon": "^8.1.0",
    "sinon-chai": "^3.4.0",
    "mocha": "^7.0.0",
    "mochawesome": "^4.1.0",
    "prettier": "^1.19.1",
    "ts-node": "^8.6.2",
    "tslint": "^5.20.1",
    "typescript": "^4.7.4"
  }
}
